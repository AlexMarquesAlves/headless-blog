{
  "name": "headless-blog",
  "version": "0.1.0",
  "private": false,
  "engines": {
    "node": "v20.12.x"
  },
  "scripts": {
    "commit": "cz",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "cy:web": "npx cypress open",
    "cy:mobile": "npx cypress open --config viewportWidth=410 viewportHeight=860",
    "cy:headless": "npx cypress run --browser electron",
    "cy:headless:mobile": "npx cypress run --browser electron --config viewportWidth=410 viewportHeight=860",
    "lint": "next lint",
    "eslint": "eslint src --ext ts,tsx,js,jsx --report-unused-disable-directives --max-warnings 0",
    "eslint:fix": "eslint src --ext ts,tsx,js,jsx --fix",
    "format": "prettier \"src/**/*.{ts,tsx,js,jsx,css,html}\" --write",
    "check": "prettier \"src/**/*.{ts,tsx,js,jsx,css,html}\" --check",
    "lint-staged": "lint-staged",
    "type-check": "tsc --noEmit",
    "prepare": "husky install",
    "postinstall": "npm run prepare"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.372.0",
    "next": "14.2.1",
    "react": "^18",
    "react-dom": "^18",
    "tailwind-merge": "^2.3.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.2",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "cypress": "^13.8.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8",
    "eslint-config-next": "14.2.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "postcss": "^8",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "pnpm run eslint && pnpm run format"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx}": [
      "pnpm run eslint",
      "pnpm run format"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}