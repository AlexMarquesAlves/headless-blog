{
  "name": "headless-blog",
  "version": "0.1.0",
  "private": false,
  "engines": {
    "node": "v20.12.0",
    "pnpm": "9.0.5"
  },
  "scripts": {
    "commit": "cz",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "eslint": "eslint src --ext ts,tsx,js,jsx --report-unused-disable-directives --max-warnings 0",
    "eslint:fix": "eslint src --ext ts,tsx,js,jsx --fix",
    "format": "prettier \"src/**/*.{ts,tsx,js,jsx,css,html}\" --write",
    "check": "prettier \"src/**/*.{ts,tsx,js,jsx,css,html}\" --check",
    "lint-staged": "lint-staged",
    "type-check": "tsc --noEmit",
    "prepare": "husky install",
    "postinstall": "npm run prepare"
  },
  "dependencies": {
    "next": "14.2.1",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.2",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "cypress": "^13.8.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8",
    "eslint-config-next": "14.2.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "postcss": "^8",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "pnpm run lint && pnpm run format"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx}": [
      "pnpm run lint",
      "pnpm run format"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
